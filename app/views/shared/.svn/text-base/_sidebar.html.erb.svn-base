<div id="sidebar">
	<% if !@new_faculty.empty? %>
	<h2>Meet Our Newest Faculty</h2>
	<div id="newFacultyContainer">
		<% @new_faculty.each do |new_f| %>
		<div class="newFaculty" >
      <div class="newFacultyImg">
  			<% if new_f.photo.nil? or new_f.photo == "" %>
				  <%= image_tag 'default_user.jpeg' %>
			  <% else %>
				  <%= image_tag new_f.photo %>
			  <% end %>
			</div>
			<div class="newFacultyContent">
				<p><%= link_to_if valid_link?(new_f.link), new_f.fname + " " + new_f.lname, new_f.link, :target => '_blank' %>&nbsp;(<%= new_f.dept %>)</p>
				<p>Interests: <%= truncate(new_f.description, :length => 50) %></p>
			</div>
			<div class="clear"></div>
		</div>
		<% if session[:user_id] %>
			<%= link_to "Remove", :controller => :researchers, :action => :unrecent, :id => new_f.id %>
		<% end %>
		<% end %>
	</div>
	<% end %>
</div>