<%= simple_form_for(@project) do |f| %>
  <%= f.error_messages %>
  <%= f.input :title, :input_html => {  :size => 40} %>
  <%= f.input :agency, :input_html => {  :size => 40} %>
  <%= f.input :dept, :input_html => {  :size => 40} %>
  <%= f.association :researcher, :collection => Researcher.all(:order => :lname), :label_method => :full_name, :prompt => "Choose a researcher" %>
  <%= f.submit %>  
<% end %>