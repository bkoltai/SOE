<% @title = "News" %>
<% if @posts.nil?%>
<h1>No posts currently available</h1>
<% else %>

<div id='rss'>
	<h2>News from <%= link_to 'Tufts Now', 'http://now.tufts.edu', :target => '_blank' %></h2>
  <%= render :partial => 'shared/rss' %>
</div>

<h2>News from SoE Research</h2>
<% @posts.each do |post| %>
<p>
	<%= link_to post.title, post.link %>
</p>
<p><%= post.pub_date.inspect %></p>
<p>
	<%= post.abstract %>
</p>
	<% if session[:user_id] %>
    	<td><%= link_to 'Show', post %></td>
    	<td><%= link_to 'Edit', edit_post_path(post) %></td>
    	<td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
	<% end %>
<% end %>
</table>

<br />
<% end%>

<% if session[:user_id] %>
	<%= link_to 'New Post', new_post_path %>
<% end %>

