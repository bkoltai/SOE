<%= simple_form_for(@post) do |f| %>
  <%= f.errors %>
  <%= raise "Fix check box" %>
  <%= f.input :external, :label => "External link" %>
  <%= f.input :title %>
  <%= f.input :pub_date, :label => "Publication date" %>
  <%= f.input :abstract %>
  <%= f.input :link %>
  <%= f.input :content %>
  <%= f.input :tags %>
  <%= f.submit %>
<% end %>