<%= simple_form_for(@student) do |f| %>
  <%= f.error_messages %>
  <%= f.input :fname, :label => "First Name" %>
  <%= f.input :lname, :label => "Last Name" %>
  <%= f.input :email %>
  <%= f.input :degree %>
  <%= f.input :dept %>
  <%= f.input :proj_title, :label => "Project Title" %>
  <%= f.association :researcher, :collection => Researcher.all(:order => :lname), :label_method => :full_name, :prompt => "Choose a researcher"  %>
  <%= f.submit %>
<% end %>